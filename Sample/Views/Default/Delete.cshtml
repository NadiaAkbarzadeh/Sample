@model Person

<div class="row">
    <form>
        <div class="col-md-3">
            <div class="mb-3">
                @Html.LabelFor(x => x.FirstName, null , new{@class="form-label"})
                @Html.TextBoxFor(x => x.FirstName,"" ,new{@class="form-control", @readonly = true,autocomplete="off"})
            </div>
        </div>

        <div class="col-md-3">
            <div class="mb-3">
                @Html.LabelFor(x => x.LastName, null , new{@class="form-label"})
                @Html.TextBoxFor(x => x.LastName,"" ,new{@class="form-control", @readonly = true})
            </div>
        </div>
        <div class="col-md-3">
            <div class="mb-3">
                @Html.LabelFor(x => x.FatherName, null , new{@class="form-label"})
                @Html.TextBoxFor(x => x.FatherName,"" ,new{@class="form-control", @readonly = true})
            </div>
        </div>
        <div class="col-md-3">
            <div class="mb-3">
                @Html.LabelFor(x => x.Age, null , new{@class="form-label"})
                @Html.TextBoxFor(x => x.Age,"" ,new{@class="form-control", @readonly = true})
            </div>
        </div>
        <div class="col-md-3">
            <div class="mb-3">
                @Html.LabelFor(x => x.PhoneNumber, null , new{@class="form-label"})
                @Html.TextBoxFor(x => x.PhoneNumber,"" ,new{@class="form-control", @readonly = true})
            </div>
        </div>
    </form>
    <form method="post">
        <div class="col-md-3">
            <button class="btn btn-success">Delete</button>
            <a href="/Default/index" class="btn btn-danger">back</a>
        </div>
    </form>

</div>